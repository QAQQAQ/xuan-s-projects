<%- include header %>
    <script src='/app.js'></script>
    <script src="/controllers/join.js"></script>

    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div>
                    <div class="animated rotateInDownLeft table" style="margin-top: 27%" ng-controller="JoinCtrl" ng-cloak>
                        <div class="text-center page-title">选择加入行程</div>
                        <div class="row">
                          <div class="table-responsive">
                  <table class="table table-bordered table-striped table-hover">

                    <thead>
                      <tr>
                        <th>路线</th>
                        <th>时间</th>
                        <th>人数</th>
                        <th class="text-center">加入</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr ng-repeat="item in dataList">
                        <td>
                          <span>{{item.route}}</span>
                        </td>
                        <td>
                          <span>{{item.time}}</span>
                        </td>
                        <td>
                          <span>{{item.personCount}}</span>
                        </td>
                        <td class="text-center text-success">
                          <button>加入</button>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include footer %>
