<%- include header %>
    <script src='/app.js'></script>
    <script src="/controllers/publish.js"></script>

    <div class="content-section-a">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-sm-2">
                </div>
                <div class="col-lg-8 col-sm-8">
                    <div class="animated rotateInDownLeft col-lg-10" style="margin-top: 27%" ng-controller="PublishCtrl" ng-cloak>
                        <div class="text-center page-title">发布约车行程</div>
                        <div class="row">
                            <form>
                                <div class="form-group" style="margin-top:20px">
                                  <div>路线:</div>
                                  <select ng-model="route" class="form-control" placeholder="路线" ng-options="route.name for route in routeList">
                                  </select>
                                </div>
                                <div class="form-group" style="margin-top:20px">
                                  <div>时间:</div>
                                  <select ng-model="hour" class="form-control col-md-5" ng-options="hour.name for hour in hourList">
                                  </select>时
                                  <select ng-model="minute" class="form-control col-md-5" ng-options="minute.name for minute in minuteList">
                                  </select>分
                                </div>
                                <div>
                                    <span class="text-danger">
                                      {{errorMsg}}
                                    </span>
                                </div>
                                <button ng-click="register()" class="btn btn-default center-block">发布</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-sm-2">
                </div>
            </div>
        </div>
    </div>

    <%- include footer %>
